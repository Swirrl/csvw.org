      </nav>
      <div class="mw8 center">
        <h1 class="f-subheadline lh-solid white-90 pb2 mv0">$title$</h1>
      </div>
    </header>
    <main>
      <section class="mw8 center cf pa2-ns">
        ${ for(tools) }
        ${ it:tool.html.template() }
        ${ endfor }  
      </section>
      <section class="mw8 center cf pa2">
        <p>Please submit suggestions for other tools to our <a href="github.com/swirrl/csvw.org">GitHub repository</a>.</p>
      </section>
    </main>
    <footer>
      <div class="mw8 center pv5">
        <span class="fr white hover-white">A tribute to CSVW made by <a class="white no-underline hover-white" href="https://swirrl.com">Swirrl</a></span>
      </div>
    </footer>
    <script type="module">
      import { triangulation } from '/triangulation.js';
      triangulation(document.getElementById("background"));
    </script>
  </body>
</html>
      
